<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FPS Match Analyzer</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <aside class="sidebar">
      <h2>History</h2>
      <div id="matchHistory" class="match-history">
        {{#each matches}}
          <div class="match-item" data-match-id="{{this.id}}">
            <span class="match-id">Match {{this.id}}</span>
            <span class="match-winner">{{this.winnerName}}</span>
          </div>
        {{/each}}
      </div>
    </aside>

    <main class="main-content">
      <header class="header">
        <h1>FPS MATCH ANALYZER</h1>
      </header>

      <section class="upload-section">
        <div class="upload-box">
          <input type="file" id="logFile" accept=".txt,.log" />
          <label for="logFile">Select log file</label>
          <div class="upload-controls">
            <label for="animationDelay">Speed:</label>
            <input type="range" id="animationDelay" min="100" max="1000" value="400" />
            <span id="delayValue">400ms</span>
          </div>
          <button id="processBtn" class="btn-process">Process</button>
        </div>
        <div id="progressBar" class="progress-bar hidden">
          <div class="progress-fill"></div>
          <span class="progress-text">0%</span>
        </div>
      </section>

      <section class="ranking-section hidden" id="rankingSection">
        <div class="section-header">
          <h2>RANKING</h2>
          <span id="currentMatchId" class="match-badge"></span>
        </div>

        <div id="lastEvent" class="last-event hidden"></div>

        <table class="ranking-table">
          <thead>
            <tr>
              <th>#</th>
              <th>Player</th>
              <th>Frags</th>
              <th>Deaths</th>
              <th>K/D</th>
            </tr>
          </thead>
          <tbody id="rankingBody">
          </tbody>
        </table>
      </section>

      <section class="highlights-section hidden" id="highlightsSection">
        <div class="section-header">
          <h2>HIGHLIGHTS</h2>
        </div>
        <div id="highlightsList" class="highlights-list">
        </div>
      </section>
    </main>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
