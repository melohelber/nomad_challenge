<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FPS Match Analyzer</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <aside class="sidebar">
      <h2>History</h2>
      <p class="history-hint">Uploaded log files will appear here</p>
      <div id="matchHistory" class="match-history">
      </div>
    </aside>

    <main class="main-content">
      <header class="header">
        <h1>FPS MATCH ANALYZER</h1>
      </header>

      <section class="upload-section">
        <div class="input-box">
          <label for="logContent" class="input-label">Paste your log content below:</label>
          <textarea id="logContent" class="log-textarea" placeholder="23/04/2019 15:34:22 - New match 11348965 has started
23/04/2019 15:36:04 - Roman killed Nick using M16
23/04/2019 15:36:33 - <WORLD> killed Nick by DROWN
23/04/2019 15:39:22 - Match 11348965 has ended"></textarea>
          <div class="input-controls">
            <div class="speed-control">
              <label for="animationDelay">Speed:</label>
              <input type="range" id="animationDelay" min="50" max="1000" value="300" />
              <span id="delayValue">300ms</span>
            </div>
            <div class="action-buttons">
              <button id="clearBtn" class="btn-clear">Clear</button>
              <button id="processBtn" class="btn-process">Process</button>
            </div>
          </div>
        </div>
        <div id="progressBar" class="progress-bar hidden">
          <div class="progress-fill"></div>
          <span class="progress-text">0%</span>
        </div>
      </section>

      <!-- Live animation section (shown during processing) -->
      <section class="live-section hidden" id="liveSection">
        <div class="section-header">
          <h2>LIVE</h2>
          <span id="currentMatchId" class="match-badge"></span>
        </div>
        <div id="lastEvent" class="last-event hidden"></div>
        <table class="ranking-table">
          <thead>
            <tr>
              <th>#</th>
              <th>Player</th>
              <th>Frags</th>
              <th>Deaths</th>
              <th>K/D</th>
            </tr>
          </thead>
          <tbody id="liveRankingBody">
          </tbody>
        </table>
      </section>

      <!-- All matches results (shown after processing) -->
      <section class="results-section hidden" id="resultsSection">
        <div class="section-header">
          <h2>MATCH RESULTS</h2>
          <span id="matchCount" class="match-badge"></span>
        </div>
        <div id="matchResultsList" class="match-results-list">
        </div>
      </section>
    </main>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
